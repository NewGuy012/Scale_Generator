<GeneratorGrid>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: header
            text: "Let's generate a scale!"
            font_size: 30
            background_color: (206/255, 196/255, 245/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos

        Label:
            id: hint_text
            text: " "
            font_size: 18
            background_color: (206/255, 196/255, 245/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos

        GridLayout:
            cols: 3
            rows: 1

            Label:
                font_size: 30
                text: "Type a key -->"
                background_color: (187/255, 194/255, 167/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            TextInput:
                id: key_input
                text: ""
                halign: "center"
                font_size: 40
                border_color: (0,0,0)
                on_text: root.key_typed(key_input.text)
              
            Spinner:
                id: scale_type
                font_size: 30
                background_color: (187/255, 194/255, 167/255, 1)
                background_normal: ""
                text: "Choose Scale"
                values: ["Major", "Minor", "Ionian", "Dorian", "Phrygian", "Lydian", "Mixolydian", "Aeolian", "Locrian", "Pentatonic", "Fourths", "Fifths", "Relative Minor"]

                on_text: root.scale_clicked(scale_type.text)

        Label:
            id: user_input
            text: ""
            font_size: 40
            background_color: (187/255, 194/255, 167/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
          
        Button:
            font_size: 40
            text: "Generate!"
            pos_hint: {"center_x": 0.5}
            size_hint: (1, .9)
            background_color: (206/255, 196/255, 245/255, 1)
            background_normal: ""

            on_press: root.generate()

